# Enable MPU
CONFIG_ARM_MPU=y

# Use pinctrl
CONFIG_PINCTRL=y

# Enable hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# Enable GPIO
CONFIG_GPIO=y

# Enable UART console
CONFIG_SERIAL=y
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable PWM
CONFIG_PWM=y
CONFIG_PWM_NRFX=y

# Enable USB
CONFIG_USB_DEVICE_STACK=y
CONFIG_USB_DEVICE_HID=y
CONFIG_USB_DEVICE_REMOTE_WAKEUP=y
CONFIG_USB_NRFX=y
CONFIG_USB_DEVICE_INITIALIZE_AT_BOOT=n

# Enable Bluetooth
CONFIG_BT=y
CONFIG_BT_PERIPHERAL=y
CONFIG_BT_DEVICE_NAME="OCDMK"
CONFIG_BT_DEVICE_APPEARANCE=961

# Bluetooth controller
CONFIG_BT_CTLR=y
CONFIG_BT_CTLR_TX_PWR_PLUS_8=y

# Enable Settings/NVS for persistent storage
CONFIG_FLASH=y
CONFIG_FLASH_PAGE_LAYOUT=y
CONFIG_FLASH_MAP=y
CONFIG_NVS=y
CONFIG_SETTINGS=y
CONFIG_SETTINGS_NVS=y

# Power management
CONFIG_PM_DEVICE=y

# Power driver (DC/DC configured via &reg1 in devicetree)
CONFIG_NRFX_POWER=y

# ZMK specific
CONFIG_ZMK_USB=y
CONFIG_ZMK_BLE=y

